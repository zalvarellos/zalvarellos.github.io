{{#if carrito.length}}
    <button class="btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Pedir</button>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envío</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{marca}}</td>
            <td>
                <img src="{{foto}}" width="50" alt="{{nombre}}"> 
            </td>
            <td>{{cantidad}}</td>
            {{#if envio}}
                <td>Si</td>
            {{else}}    
                <td>No</td>
            {{/if}}
            <td>
                <button onclick="carritoController.borrarProducto({{id}})">Borrar</button>
            </td>
        </tr>
        {{/each}}
    </table>
{{else}}
    <h3>El carrito está vacío</h3>
{{/if}}
